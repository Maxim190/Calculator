<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/bg_ripple_circle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalculatorButtonStyle.DarkBlue">
        <item name="backgroundTint">@color/dark_blue</item>
    </style>

    <style name="CalculatorButtonStyle.LightBlue">
        <item name="backgroundTint">@color/light_blue</item>
    </style>

    <style name="CalculatorInputTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CalculatorExpressionTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>